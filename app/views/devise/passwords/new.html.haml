%section#password-rescue-form
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    .form-group
      = f.label "Ваш email, будь ласка"
      %br/
      = f.text_field :email, autofocus: true, class: "form-control"
    .form-group
      = f.submit "Надіслати інструкції зміни пароля!", class: "btn btn-primary"
