#teachers-list.panel.panel-primary
  .panel-heading СПИСОК ВИКЛАДАЧІВ
  .panel-body
    %table.table.table-hover
      %thead
        %tr
          %th.col-md-2 Ім'я 
          %th.col-md-2 Ім'я користувача
          %th.col-md-2 Email 
          %th.col-md-1 Школа
          %th.col-md-1
          %th.col-md-1
          %th.col-md-1
          %th.col-md-1
      %tbody
        = render @teachers
    .form-group.digg_pagination
      = will_paginate @teachers, container: false
    .form-group  
      = form_for [:admin, @teacher], url: admin_import_teachers_path() do |f|
        .form-group      
          .row
            .col-md-2
              %label.btn.btn-primary.btn-block
                %i.glyphicon.glyphicon-search
                  Browse 
                  = f.file_field :school_data, style: "display: none" 
            .col-md-1  
              = f.submit "Імпорт", disabled: true, class: "btn btn-warning btn-block"
